<div class="container-wrap">
  <header class="container">
    <h1>List of Courses</h1>
  </header>
  
  <main class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Course</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    
    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.name %></td>
          <td><%= link_to 'Show', course, :class => 'btn btn-default' %></td>
          <td><%= link_to 'Edit', edit_course_path(course), :class => 'btn btn-primary' %></td>
          <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </main>
  
  <footer class="container">
    <p>
      <%= link_to 'New Course', new_course_path, :class => 'btn btn-primary' %> <%= link_to 'View Problems', '/admin/problems', :class => 'btn btn-info' %>
    </p>
  </footer>
</div>