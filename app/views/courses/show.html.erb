<% content_for :title do %>
  <%= @course.name %>
<% end %>

<% content_for :options do %>
  <%= link_to 'Edit', edit_course_path(@course), :class => 'btn btn-primary' %> 
  <%= link_to 'Back', courses_path, :class => 'btn btn-default' %>
<% end %>

<div class="alert alert-warning">
  <p>In the future you will be able to add problems and students to the course.</p>
</div>

<div id="course-problems" class="course-problems">
  <%= link_to 'Create New Problem', new_problem_path(:courseid => @myid), :class => 'btn btn-primary' %>
</div>