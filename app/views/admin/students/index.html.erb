<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Id</th>
      <th>Username</th>
      <th title="Test cases passed out of test cases total for problems past due">Grade</th>
      <th>Classes</th>
    </tr>
  </thead>
  
  <tbody>
    <% @students.each do |student| %>
      <tr class="clickable-row" data-href="<%= admin_student_path(student) %>">
        <td class="clickable-row-main-cell"><%= student.Name %></td>
        <td><%= student.ID %></td>
        <td><%= student.UserName %></td>
        <td><%= student.Problems_grade %></td>
        <td><%= student.courses.map { |course| course.name }.join(", ") %></td>
      </tr>
    <% end %>
  </tbody>
</table>