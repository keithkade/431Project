<% content_for :title do %>
  <%= @course.name %>
<% end %>

<% content_for :options do %>
  <%= link_to 'Edit', edit_admin_course_path(@course), :class => 'btn btn-primary' %>
  <%= link_to 'Back', admin_courses_path, :class => 'btn btn-default' %>
<% end %>

<div class="alert alert-warning">
  <p>In the future you will be able to add problems and students to the course.</p>
</div>

<div class="course-students">
  <h1>Enrolled Students</h1>
  <ul>
    <% @students.each do |student| %>
      <li><%= link_to "#{student.Name}", admin_student_path(student) %></li>
    <% end %>
  </ul>
</div>

<div class="course-problems">
  <h1>Problems for this Course</h1>
  <ul>
    <% @problems.each do |problem| %>
      <li><%= link_to "#{problem.title}", admin_problem_path(problem) %></li>
    <% end %>
  </ul>
</div>

<div id="course-problems" class="course-problems">
  <%= link_to 'Create New Problem', new_admin_problem_path(:courseid => @myid), :class => 'btn btn-primary' %>
</div>