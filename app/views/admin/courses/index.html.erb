<% content_for :title do %>
  List of Courses
<% end %>

<% content_for :options do %>
  <%= link_to 'New Course', new_admin_course_path, :class => 'btn btn-primary' %>
  <%= link_to 'View Problems', '/admin/problems', :class => 'btn btn-info' %>
  <%= link_to 'Manage Students', '/admin/students', :class => 'btn btn-info' %>
  <%= link_to 'View Student Submissions','/admin/submissions'%>
  
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Course</th>
      <th>Enrollment</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.users.length %></td>
        <td><%= link_to 'Show', admin_course_path(course), :class => 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_admin_course_path(course), :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', admin_course_path(course), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>