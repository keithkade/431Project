<h1>Listing Submissions</h1>

<table>
  <thead>
    <tr>
      <th>Studentid</th>
      <th>Problemid</th>
      <th>Timeonpage</th>
      <th>Result</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @submissions.each do |submission| %>
      <tr>
        <td><%= submission.studentID %></td>
        <td><%= submission.problemID %></td>
        <td><%= submission.timeOnPage %></td>
        <td><%= submission.result %></td>
        <td><%= link_to 'Show', admin_submission_path(submission) %></td>
        <td><%= link_to 'Grade', edit_admin_submission_path(submission) %></td>
        <td><%= link_to 'Destroy', admin_submission_path(submission), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

