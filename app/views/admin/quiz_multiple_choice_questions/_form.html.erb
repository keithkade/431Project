<div class="form-group">
  <%= f.label :question %>
  <%= f.text_area :question, :class => 'form-control' %>
</div>

<div class="form-group">
  <label>Answers</label>
  <div id="edit-answer-choices" class="form-horizontal">
    
    <%= render 'answer_choice', :letter => 'A', :f => f %>
    <%= render 'answer_choice', :letter => 'B', :f => f %>
    <%= render 'answer_choice', :letter => 'C', :f => f %>
    <%= render 'answer_choice', :letter => 'D', :f => f %>
    <%= render 'answer_choice', :letter => 'E', :f => f %>
    
  </div>
  <button class="btn-max btn btn-info hide">+ Add Answer Choice</button>
</div>

<div class="form-group">
  <%= f.label :correct_answer %>
  <%= f.select :correct_answer, [["A", "A"], ["B", "B"], ["C", "C"], ["D", "D"], ["E", "E"]], {}, :class => "form-control", :id => "edit-correct-answer" %>
</div>