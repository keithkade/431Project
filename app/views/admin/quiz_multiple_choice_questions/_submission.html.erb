<div class="multiple-choice-question">
  <div class="question-text">
    <%= question.question %>
  </div>
  <div class="answer-choices">
    <p class="text-<% if question.correct_answer == 'A' %>success<% elsif given_answer == 'A' %>danger<% else %>default<% end %>"><strong>A. </strong> <%= question.answer_A %></p>
    <p class="text-<% if question.correct_answer == 'B' %>success<% elsif given_answer == 'B' %>danger<% else %>default<% end %>"><strong>B. </strong> <%= question.answer_B %></p>
    <p class="text-<% if question.correct_answer == 'C' %>success<% elsif given_answer == 'C' %>danger<% else %>default<% end %>"><strong>C. </strong> <%= question.answer_C %></p>
    <p class="text-<% if question.correct_answer == 'D' %>success<% elsif given_answer == 'D' %>danger<% else %>default<% end %>"><strong>D. </strong> <%= question.answer_D %></p>
    <p class="text-<% if question.correct_answer == 'E' %>success<% elsif given_answer == 'E' %>danger<% else %>default<% end %>"><strong>E. </strong> <%= question.answer_E %></p>
  </div>
</div>