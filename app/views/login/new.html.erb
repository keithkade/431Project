<% content_for :title do %>
  Login
<% end %>

<div class="login-form">
  <%= form_tag :action => :create do %>
    <%= text_field_tag :user, nil, :placeholder => 'Username', :class => 'form-username form-control' %><br>
    <%= password_field_tag :password, nil, :placeholder => 'Password', :class => 'form-password form-control' %><br>
    <%= submit_tag 'Login', :id=> 'login-btn', :class => 'btn btn-primary' %>
  <% end %>
</div>
