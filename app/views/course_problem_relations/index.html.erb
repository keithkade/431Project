<h1>Listing Course Problem Relations</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Problem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_problem_relations.each do |course_problem_relation| %>
      <tr>
        <td><%= course_problem_relation.course %></td>
        <td><%= course_problem_relation.problem %></td>
        <td><%= link_to 'Show', course_problem_relation %></td>
        <td><%= link_to 'Edit', edit_course_problem_relation_path(course_problem_relation) %></td>
        <td><%= link_to 'Destroy', course_problem_relation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

